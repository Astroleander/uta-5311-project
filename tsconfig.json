    "outDir": "./dist",
    "target": "ES6",
    "module": "ES2020",
    "jsx": "react",
    "noImplicitAny": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*",
    "externals.d.ts",
  ]
}